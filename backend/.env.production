# ==============================================================================
# ENVIRONMENT VARIABLES FOR PRODUCTION DEPLOYMENT
# ==============================================================================
# CRITICAL: Copy this file to .env and fill in actual values
# NEVER commit the .env file with real credentials to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
NODE_ENV=production
PORT=5000
CLIENT_URL=https://maduraiswachh.gov.in

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
# For local Docker: mongodb://admin:password@mongodb:27017/madurai_swachh?authSource=admin
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/madurai_swachh
MONGODB_URI=mongodb://localhost:27017/madurai_swachh

# Redis for caching and session management
REDIS_URL=redis://localhost:6379

# ------------------------------------------------------------------------------
# Authentication & Security
# ------------------------------------------------------------------------------
# Generate strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_please_change_this
JWT_EXPIRE=7d

# Bcrypt salt rounds (10-12 recommended for production)
BCRYPT_SALT_ROUNDS=10

# ------------------------------------------------------------------------------
# Google Gemini AI Configuration
# ------------------------------------------------------------------------------
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# ------------------------------------------------------------------------------
# Cloud Storage (Cloudinary for images)
# ------------------------------------------------------------------------------
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Alternatively, use AWS S3:
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=ap-south-1
# AWS_S3_BUCKET=madurai-swachh-uploads

# ------------------------------------------------------------------------------
# Firebase (Optional - for push notifications and real-time data)
# ------------------------------------------------------------------------------
# FIREBASE_PROJECT_ID=madurai-swachh
# FIREBASE_PRIVATE_KEY=your_private_key
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk@madurai-swachh.iam.gserviceaccount.com

# ------------------------------------------------------------------------------
# Email Service (for notifications)
# ------------------------------------------------------------------------------
# Using SendGrid:
# SENDGRID_API_KEY=your_sendgrid_api_key
# FROM_EMAIL=noreply@maduraiswachh.gov.in

# Using SMTP:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# ------------------------------------------------------------------------------
# SMS Service (Twilio for OTP and alerts)
# ------------------------------------------------------------------------------
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ------------------------------------------------------------------------------
# Google Maps API (for geocoding and route optimization)
# ------------------------------------------------------------------------------
# Get API key from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ------------------------------------------------------------------------------
# Payment Gateway (Razorpay for citizen rewards)
# ------------------------------------------------------------------------------
# RAZORPAY_KEY_ID=your_key_id
# RAZORPAY_KEY_SECRET=your_key_secret

# ------------------------------------------------------------------------------
# Monitoring & Logging
# ------------------------------------------------------------------------------
# Sentry for error tracking (https://sentry.io)
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# New Relic for performance monitoring
# NEW_RELIC_LICENSE_KEY=your_license_key
# NEW_RELIC_APP_NAME=Madurai-Swachh-AI-Grid

# ------------------------------------------------------------------------------
# Rate Limiting & Security
# ------------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://maduraiswachh.gov.in,https://admin.maduraiswachh.gov.in

# ------------------------------------------------------------------------------
# File Upload Configuration
# ------------------------------------------------------------------------------
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg
MAX_FILES_PER_REPORT=5

# ------------------------------------------------------------------------------
# Scheduled Jobs
# ------------------------------------------------------------------------------
# Enable/disable specific cron jobs
ENABLE_CLEANLINESS_CRON=true
ENABLE_OVERFLOW_PREDICTION_CRON=true
ENABLE_CITIZEN_SCORE_CRON=true
ENABLE_OFFICER_EFFICIENCY_CRON=true
ENABLE_CLEANUP_CRON=true
ENABLE_DAILY_SUMMARY_CRON=true

# ------------------------------------------------------------------------------
# Government Integration APIs (Optional)
# ------------------------------------------------------------------------------
# GSTN API for circular economy tracking
# GSTN_API_KEY=your_gstn_api_key

# UIDAI for citizen verification
# UIDAI_AUTH_KEY=your_uidai_key

# eDistrict integration
# EDISTRICT_API_ENDPOINT=https://edistrict.tn.gov.in/api
# EDISTRICT_API_KEY=your_api_key

# ------------------------------------------------------------------------------
# Mobile App Configuration
# ------------------------------------------------------------------------------
# ANDROID_APP_VERSION=1.0.0
# IOS_APP_VERSION=1.0.0
# FORCE_UPDATE_VERSION=1.0.0

# ------------------------------------------------------------------------------
# AI Model Configuration
# ------------------------------------------------------------------------------
# Confidence thresholds for AI predictions
AI_CONFIDENCE_THRESHOLD=0.75
AI_OVERFLOW_RISK_THRESHOLD=0.6

# Model update frequency (in hours)
AI_MODEL_REFRESH_INTERVAL=24

# ==============================================================================
# DEPLOYMENT CHECKLIST
# ==============================================================================
# ✅ 1. Generate strong JWT_SECRET
# ✅ 2. Get Gemini API key from Google AI Studio
# ✅ 3. Set up Cloudinary account for image uploads
# ✅ 4. Configure MongoDB URI (local or Atlas)
# ✅ 5. Set up Redis instance
# ✅ 6. Get Google Maps API key
# ✅ 7. Configure email service (SendGrid/SMTP)
# ✅ 8. Set CORS_ORIGINS to production domains
# ✅ 9. Enable appropriate cron jobs
# ✅ 10. Set NODE_ENV=production
# ==============================================================================
